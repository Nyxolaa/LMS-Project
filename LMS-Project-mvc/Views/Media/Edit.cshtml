@model LMS_Project_mvc.Models.Media

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<h4>Media</h4>

<div>
    <a asp-action="Index">GERİ DÖN</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="CategoryId"> Medya Kategorisi</label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories"></select>
            </div>

            <div class="form-group">
                <label asp-for="Title" class="control-label">Başlık</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label>Önizleme</label><br />
                    @if (Model.MTypeId == 1)
                    {
                        <video width="320" height="240" controls>
                            <source src="http://localhost:5004/@Model.FilePath" type="video/mp4">
                        </video>
                    }
                    else if (Model.MTypeId == 2)
                    {
                        <audio controls>
                            <source src="http://localhost:5004/@Model.FilePath" type="audio/mpeg">
                        </audio>
                    }
            </div>

            <div class="form-group">
                <label asp-for="Time" class="control-label">Süre (dk)</label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklama</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">GERİ DÖN</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
